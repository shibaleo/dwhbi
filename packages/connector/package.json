{
  "name": "@repo/connector",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./toggl-track": {
      "import": "./src/services/toggl-track/index.ts",
      "types": "./src/services/toggl-track/index.ts"
    },
    "./google-calendar": {
      "import": "./src/services/google-calendar/index.ts",
      "types": "./src/services/google-calendar/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "sync:toggl": "npx tsx src/services/toggl-track/cli.ts",
    "sync:gcal": "npx tsx src/services/google-calendar/cli.ts"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pg": "^8.11.0",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.0"
  }
}
